<h1 align = "center">Title: <%= @article.title %></h1>


<div class = "well">
  <h4 class = "description"><strong>Article Body</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>

  <div class = "article-actions">
    <%= link_to "Back to Index", articles_path, class: "btn btn-primary btn-lg btn-block", id: "Index_Show" %>
    <%= link_to "Edit This", edit_article_path(@article), class: "btn btn-primary btn-lg btn-block", id: "Edit_Show" %>
    <%= link_to "Delete This", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this?" }, class: "btn btn-danger btn-lg btn-block" %>
  </div>
</div>